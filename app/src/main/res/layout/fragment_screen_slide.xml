<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="3.9dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="3.9dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/lightRed"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtImproveYourSkills"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16.2dp"
                android:layout_marginTop="350dp"
                android:fontFamily="@font/poppins_bold"
                android:lineHeight="55dp"
                android:lineSpacingExtra="3sp"
                android:text="Improve your Skills"
                android:textColor="#2f2e41"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOurApp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtImproveYourSkills"
                android:layout_alignEnd="@+id/txtImproveYourSkills"
                android:layout_marginLeft="16.2dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins_bold"
                android:lineSpacingExtra="2.1sp"
                android:text="Our app will turn the learning process into the increadible journey"
                android:textColor="#5c5c5c"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16.2dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/underlined_skip"
                android:textColor="#ae2f2e41"
                android:textSize="14sp" />



        </RelativeLayout>




    </androidx.cardview.widget.CardView>


</RelativeLayout>