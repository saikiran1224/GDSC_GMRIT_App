<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_light_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.general.StudentProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/closeIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/navigation_dark_blue" />

        <TextView
            android:id="@+id/txtProfileShortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/closeIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_textview"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="sk"
            android:textAllCaps="true"
            android:textColor="#0f2e9a"
            android:textSize="38sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtProfileShortName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Sai Kiran Kopparthi"
            android:textColor="#244393"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txtStudentName"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:background="@color/white"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/txtContactDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="22dp"
                android:clickable="true"
                android:fontFamily="@font/poppins_medium"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center_vertical"
                android:text="Contact Details"
                android:textColor="#353535"
                android:textSize="20sp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEmailDetails"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_below="@id/txtContactDetails"
                android:layout_marginStart="22dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                app:cardCornerRadius="13dp"
                app:cardElevation="10dp"
                app:strokeColor="#acb5e8"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_mail_outline_24"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/poppins"
                        android:textColor="#707070"
                        android:text="Email ID"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#707070"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="knvrs.saikiran@gmail.com"
                        android:textSize="16sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txtCertificates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardEmailDetails"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="22dp"
                android:clickable="true"
                android:fontFamily="@font/poppins_medium"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center_vertical"
                android:text="Certificates"
                android:textColor="#353535"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCertificates"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="250dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Sorry, you haven't uploaded any certificates. Kindly update your Profile"
                android:textSize="15.5sp" />


        </RelativeLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>